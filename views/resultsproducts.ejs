<%- include('partials/header') -%>

<div class="container">
    <h1>Search Results for "<%= searchTitle %>"</h1>
    <div class="sort-buttons mb-4">
        <a href="/resultsproducts?title=<%= searchTitle %>&sort=price" class="btn btn-primary">Sort by Price</a>
        <a href="/resultsproducts?title=<%= searchTitle %>&sort=discount" class="btn btn-primary">Sort by Discount</a>
    </div>
    <form action="/shoppingList" method="POST">
        <% products.forEach(product => { %>
            <div class="card mb-5 w-75">
                <div class="row no-gutters">
                    <div class="col-md-4">
                        <img src="<%= product.imgUrl %>" class="card-img img-fluid">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h2 class="card-title"><b><%= product.title %></b></h2>
                            <h2 class="card-title"><b><%= product.price %></b> </h2>
                            <hr>
                            <h3 class="card-title" style="color: red;"><b>Discount: <%= product.discount %></b> </h3>
                            <hr>
                            <h4 class="mb-2">Product Details:</h4>
                            <p class="card-text"><%= product.productDetails %></p>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="selectedProducts" value="<%= product._id %>">
                                <label class="form-check-label">
                                    Add to Shopping List
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <% }); %>
        <button type="submit" class="btn btn-success">Go to Shopping List</button>
    </form>
</div>

<%- include('partials/footer') -%>



